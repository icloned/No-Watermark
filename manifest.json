{
  "manifest_version": 3,
  "name": "AI图片无水印下载器",
  "version": "1.0",
  "description": "为AI生成的图片添加无水印下载按钮",
  "permissions": [
    "activeTab",
    "downloads",
    "webRequest"
  ],
  "host_permissions": [
    "*://*.byteimg.com/*",
    "*://jimeng.jianying.com/*",
    "*://www.doubao.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://jimeng.jianying.com/*",
        "*://www.doubao.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}